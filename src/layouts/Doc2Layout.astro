---
interface Props {
  title: string;
}

const { title } = Astro.props;

const sidebarItems = [
  { text: "快速了解", href: "/article/aboutus" },
  { text: "更新日志", href: "/article/quicklearning" },
  { text: "快速搭建", href: "#" },
  { text: "单体工程", href: "#" },
];
---

<div class="min-h-screen flex">
  <!-- Sidebar -->
  <aside class="w-64 bg-gray-50 border-r border-gray-200 overflow-y-auto">
    <nav class="p-4">
      {sidebarItems.map(item => (
        <div class="mb-2">
          <a
            href={item.href}
            class="block py-2 px-4 text-gray-700 hover:bg-gray-100 rounded-lg"
          >
            {item.text}
          </a>
        </div>
      ))}
    </nav>
  </aside>

  <!-- Main content -->
  <main class="flex-1 overflow-y-auto">
    <div class="max-w-4xl mx-auto px-8 py-12">
      <slot />
    </div>
  </main>
</div>