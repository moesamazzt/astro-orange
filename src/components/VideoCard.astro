---
interface Props {
  title: string;
  description: string;
  duration: string;
  image: string;
}

const { title, description, duration, image } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow h-[400px] flex flex-col">
  <div class="relative h-48">
    <img src={image} alt={title} class="w-full h-full object-cover" />
    <span class="absolute bottom-2 right-2 bg-black bg-opacity-70 text-white px-2 py-1 rounded text-sm">
      {duration}
    </span>
  </div>
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="text-xl font-semibold mb-3 line-clamp-2">{title}</h3>
    <p class="text-gray-600 text-sm flex-1 line-clamp-3">{description}</p>
  </div>
</div>